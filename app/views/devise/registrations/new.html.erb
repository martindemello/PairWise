<div class="container col-4">
  <h2 class="text-primary">Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false},
    defaults: {
      input_html: { class: "border-primary text-primary form-rnd-corners input-white" },
      label_html: { class: "text-primary" },
      wrapper_html: { class: "" }
    }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :crosstables_id,
                  :label => "Cross-tables ID",
                  :placeholder => 'Number at the end of your cross-tables page URL',
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "cross-tables ID" }%>
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
    </div>

    <div class="form-actions btn btn-primary submit-btn">
      <%= f.button :submit, "Sign up" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
