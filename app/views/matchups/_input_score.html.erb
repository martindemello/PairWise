<div class="container justify-content-center col-12">
  <p class="pb-2 mb-4 border-bottom">Round <%= matchup.round_number %></p>
  <%= simple_form_for matchup do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :player1_score, label: "#{matchup.player1.name}:" %>
      <%= f.input :player2_score, label: "#{matchup.player2.name}:" %>
    </div>

    <%= f.submit "Submit score", class: "btn btn-primary", id: "tourney-btn" %>
  <% end %>
</div>
