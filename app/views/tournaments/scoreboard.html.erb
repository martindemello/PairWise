<div class="container scoreboard-main">
  <div class="pos-rel">
    <%= link_to "Back", tournament_path(@tournament),
      class: "btn btn-lg btn-primary mb-5 btn-upright back-btn" %>
  </div>
  <h4 id="scoreboard-title">Scoreboard</h4>
  <h1 id="scoreboard-location"><%= @tournament.event.location %></h1>

  <% @players.each do |div, players| %>
    <h2 class="scoreboard-division">Division <%= div %></h2>
    <div class="scoreboard">
      <% players.each_with_index do |player, index| %>
        <%= render 'player_card', player: player, ranking: (index + 1).ordinalize %>
      <% end %>
    </div>
  <% end %>
</div>
