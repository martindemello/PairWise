<div class="container scoreboard-main">

  <div class="tourn-headers mb-0 d-flex justify-content-between mx-5">
    <h3>Round <%= @current_round %></h4>
    <%= link_to "Back", tournament_path(@tournament),
    class: "btn btn-lg btn-primary mb-5 back-btn" %>
  </div>

  <% @players.each do |div, players| %>
    <%# <h2 class="scoreboard-division">Division</h2> %>
    <h4 class="scoreboard-division">Division <%= div %></h2>
    <div class="scoreboard">
      <% players.each_with_index do |player, index| %>
        <%= render 'player_card', player: player, ranking: index + 1 %>
      <% end %>
    </div>
  <% end %>
</div>
