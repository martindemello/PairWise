<% if player.photo.attached? %>
  <%= cl_image_tag player.photo.key, class: "player-avatar",
    transformation: [
      {gravity: "face", height: 128, width: 128, crop: "crop"},
      # {radius: "max"},
      {width: size, crop: "scale"}
    ] %>
<% else %>
  <%= image_tag "user-astronaut-solid.svg", class: "player-avatar", width: size %>
<% end %>

