<div class="container col-3">
  <div class="d-flex justify-content-center">
    <div class="user-profile-avatar">
    <% if current_user %>
      <%= image_tag "user-astronaut-solid.svg" %>
    <% end %>
    </div>
  </div>
  <div class="d-flex justify-content-center">
    <h2 class="text-primary">User Id: <%= current_user.id %></h2>
  </div>
  <div class="d-flex justify-content-center">
    <h3 class="text-primary">Email: <%= current_user.email %></h3>
  </div>
</div>
